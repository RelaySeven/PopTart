<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.pltw.examples.poptartinventory.AdditionActivity">


    <EditText
            android:id="@+id/newFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Flavor"
            android:textSize="10pt"
            android:layout_weight="1" />
        <CheckBox
            android:id="@+id/isSeasonal"
            android:layout_width="match_parent"
            android:text="Seasonal?"
            android:layout_height="match_parent"
            android:textSize="15pt"
            android:checked="false"
            android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/newCurrent"
        android:layout_width="match_parent"
        android:maxLength="3"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Current"
        android:textSize="10pt"
        android:layout_weight="1" />

    <EditText
            android:id="@+id/newMinimum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:inputType="number"
            android:hint="Minimum"
            android:textSize="10pt" />
        <Button
            android:id="@+id/addNewFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Add"
            android:layout_weight="1" />

    </LinearLayout>

